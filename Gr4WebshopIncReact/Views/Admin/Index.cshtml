@using Gr4WebshopIncReact.Models.viewModels
@model AdminIndexVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.js"></script>

<h1>Admin view loaded</h1>


<ul>
    <li> <a href='/Admin/UploadSingleImage'>Upload a single image</a> </li>
    <li> <a href='/Admin/UploadMultipleImages'> Upload multiple images</a> </li>
</ul>



<partial name="_FileUploadingForm" model="Model.FilesUploader" />

<h2>Images currently uploaded</h2>
<div id="content-container">
    @foreach (string p in Model.ImageLocations)
    {
        <img src="/@p"
             class="rounded-circle"
             height="200" width="200"
             asp-append-version="true" />
    }
</div>

