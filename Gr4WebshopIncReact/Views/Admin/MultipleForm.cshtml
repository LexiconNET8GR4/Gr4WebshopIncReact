@model Gr4WebshopIncReact.Models.FilesUploadingModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Many File";
}


<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Add New </h4>
        </div>
        <div class="card-body">

            <form enctype="multipart/form-data" asp-action="UploadNewImages" asp-controller="FileUploading">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Files" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="Files" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose images</label>
                        </div>
                        <span asp-validation-for="Files" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

